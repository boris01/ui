<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" class="page"
  xmlns:rtl="@nativescript-rtl/ui/grid-layout">
  <GridLayout rows="auto,*,auto,*" class="p-20">
    <Label row="0" text="LTR GridLayout" textWrap="true" />
    <GridLayout row="1" columns="* 300">
      <Label text="RTL" class="t-20 text-center c-black" textWrap="true"/>
      <Button col="1" text="RTL" class="t-20 text-center c-black" textWrap="true"/>
    </GridLayout>
    <Label row="2" text="RTL GridLayout" textWrap="true" />
    <rtl:GridLayout row="3" columns="* 300">
      <Label text="RTL" class="t-20 text-center c-black" textWrap="true"/>
      <Button col="1" text="RTL" class="t-20 text-center c-black" textWrap="true"/>
    </rtl:GridLayout>
  </GridLayout>
</Page>